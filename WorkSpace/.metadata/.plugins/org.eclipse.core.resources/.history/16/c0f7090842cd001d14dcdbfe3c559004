package pack02_byte;

public class Ex01_Byte {
	public static void main(String[] args) {
		// { } <= main 지역
		byte var1;
		var1 = 0;
		byte var2 = 10;
		// 변수타입 변수명; <= 선언
		// 선언된변수 = 값; <= 할당
		// byte는 관련된 8개의 비트들로 구성
		// bit 0 또는 1 두가지 정보를 표현할 수 있는
		// 최소한의 정보 표현 단위
		// -128 ~ 127 표현 가능
		var1 = -128;
		var2 = 127;
		System.out.println(var1);
		System.out.println(var2);

	}

}
