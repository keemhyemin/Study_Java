
public class Ex04_Oper {
	public static void main(String[] args) {
		// 사칙연산 + 나머지
		int value1 = 5, value2 = 2;
		// 연산을 먼저하게 하기 위한 구분자 => ()
		System.out.println("value1 + value2 = " + (value1 + value2));
		System.out.println("value1 - value2 = " + (value1 - value2)); // String - int 가 불가능하기 때문에 괄호로 감싸
		// 연산 순서때문에 오류가 발생하지는 않지만 습관적으로 연산식과 String이 더해질 때는 괄호로 감싸라
		System.out.println("value1 * value2 = " + (value1 * value2));
		System.out.println("value1 / value2 = " + (value1 / value2));
		
		System.out.println("나머지는 %로 구한다" + (value1 % value2));
		
		
		
	}

}
