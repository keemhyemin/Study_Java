package pack01_Variable;

public class Ex03_Variable {
	// ctrl + shift + f == 줄정리
	// ctrl + / == 선택한 행에 대해서 모두 주석 처리
	public static void main(String[] args) {
		int value=0;
		int result = value + 10;
		System.out.println(result);
//		int value = 10;
//		int result = value + 10;
		// 숫자형 변수들은 사칙연산이 가능하다.
		// 재할당. (변수를 계속 만드는게 아니라 값을 다시 줘서 바꿈)
		result = 1+1+10;
		result = 10-2;
		result = 3*7;
		result = 20/5;
		System.out.println(result);
		System.out.println(result);
		System.out.println(result);
		System.out.println(result);

	}

}
